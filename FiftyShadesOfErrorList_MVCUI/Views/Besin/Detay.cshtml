@model FiftyShadesOfErrorList_DATA.Entity.Besin

<h1 class="mt-3 text-center"> @Model.Ad Besin Detayları</h1>
<hr />

<div class="row container form-container">
    <div class="col-md-4">
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">Ad</div>
                    @Model.Ad
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">Miktar</div>
                  @*  @Convert.ToDateTime(Model.Album.CikisTarihi).ToShortDateString()*@
                  @Model.Miktar
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">Birim</div>
                    @Model.Birim
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">Kalori</div>
                    @Model.Kalori
                </div>
            </li>
        </ul>
    </div>
    <div class="col-md-4">
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">Porsiyon</div>
                    @Model.Porsiyon
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">Karbonhidrat</div>
                    @*  @Convert.ToDateTime(Model.Album.CikisTarihi).ToShortDateString()*@
                    @Model.Karbonhidrat
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">Protein</div>
                    @Model.Protein
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">Yağ</div>
                    @Model.Yag
                </div>
            </li>
        </ul>
    </div>
    <div class="col-md-4">
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">Kategori</div>
                    @Model.Kategori.Ad
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">Kayıt Tarihi</div>
                      @Convert.ToDateTime(Model.KayitTarihi).ToShortDateString()
                    
                </div>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                    <div class="fw-bold">Güncelleme Tarihi</div>
                    @Convert.ToDateTime(Model.GuncellemeTarihi).ToShortDateString()
                </div>
            </li>
        </ul>
    </div>
</div>

<div class="mt-3 d-flex justify-content-between">
    <a asp-action="BesinEkleDuzenle" asp-route-id="@Model.Id" class="btn btn-warning">Güncelle</a>
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div>
